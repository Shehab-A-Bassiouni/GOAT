
@{
    ViewData["Title"] = "Display";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="input-group mb-3 w-75 mx-auto">
    <input type="text" class="form-control" placeholder="Product Name or Serial" aria-label="Recipient's username" aria-describedby="basic-addon2">
    <div class="input-group-append">
        <a class="btn btn-primary" id="basic-addon2">Search</a>
    </div>
</div>


<div class="px-5">
    <table class="table table-striped custom-table-data">
        <thead>
            <tr>
                <th scope="col" class="align-middle text-center">#</th>
                <th scope="col" class="align-middle text-center">Image</th>
                <th scope="col" class="align-middle text-center">Serial</th>
                <th scope="col" class="align-middle text-center">Name</th>
                <th scope="col" class="align-middle text-center">Price</th>
                <th scope="col" class="align-middle text-center">Stock</th>
                <th scope="col" class="align-middle text-center">Description</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row" class="align-middle text-center">1</th>
                <td class="align-middle text-center"><img src="~/img/dummyProductImg.jpg" class="img-fluid rounded product-image" /></td>
                <td class="align-middle text-center">1001</td>
                <td class="align-middle text-center">Polo-Tshirt</td>
                <td class="align-middle text-center">300</td>
                <td class="align-middle text-center">5</td>
                <td class="align-middle text-center">Blue Tshirt</td>
            </tr>
        </tbody>
    </table>


</div>